#include "adc.h"
#include "lm35.h"

/*
 * Description :
 * Function responsible for calculate the temperature from the ADC digital value.
 */
uint16 LM35_getTemperature(uint8 channel_num)
{
    uint16 adc_value = ADC_ReadChannel(channel_num);

    uint16 temperature = (uint8) (((uint32) adc_value * SENSOR_MAX_TEMPERATURE
            * ADC_REFERENCE_VOLTAGE)
            / (ADC_MAXIMUM_VALUE * SENSOR_MAX_VOLT_VALUE));

    return temperature;
}
